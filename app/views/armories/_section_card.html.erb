<% card_classes = local_assigns.fetch(:card_classes, '') %>
<% body_classes = local_assigns.fetch(:body_classes, '') %>
<% header_classes = local_assigns.fetch(:header_classes, 'bg-dark text-white d-flex justify-content-between align-items-center') %>
<% count_badge_classes = local_assigns.fetch(:count_badge_classes, 'bg-light text-dark') %>

<div class="card shadow-sm armory-section-card <%= card_classes %>">
  <div class="card-header <%= header_classes %>">
    <h2 class="h5 mb-0">
      <% if icon_class.present? %>
        <i class="<%= icon_class %> me-2"></i>
      <% end %>
      <%= title %>
    </h2>

    <% if count.present? %>
      <span class="badge <%= count_badge_classes %>">
        <% if local_assigns[:count_icon_class].present? %>
          <i class="<%= local_assigns[:count_icon_class] %> me-1"></i>
        <% end %>
        <%= count %>
      </span>
    <% end %>
  </div>

  <div class="card-body <%= body_classes %>">
    <%= yield %>
  </div>
</div>
